#!/usr/bin/make -f

export DH_VERBOSE = 1
export DEB_BUILD_MAINT_OPTIONS = hardening=+all
export DEB_CFLAGS_MAINT_APPEND  = -Wall -pedantic
export DEB_LDFLAGS_MAINT_APPEND = -Wl,--as-needed

%:
	dh $@ --buildsystem=cmake

override_dh_auto_configure:
	dh_auto_configure -- \
		-DCMAKE_BUILD_TYPE=Release \
		-DENABLE_FETCH_TINYXML2=ON

override_dh_auto_install:
	dh_auto_install
	# Install the binary manually if not done by cmake
	install -Dm755 obj-*/cuda-demux debian/cuda-demux/usr/bin/cuda-demux

override_dh_strip:
	# Don't strip CUDA binaries as it can break them
	dh_strip --exclude=cuda-demux